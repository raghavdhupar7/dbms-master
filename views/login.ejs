<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="../assets/css/auth.css">
    <link rel="stylesheet" href="../assets/bootstrapcss/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="../assets/images/logo.jpg">
  </head>
  <body>
    <%- include partials/authBackground.ejs %>
    <div class="authCard">
      <img class="logo" src="../assets/images/logo.jpg" alt="" width="50%" height="auto">
      <h2 class="card-heading">Login</h2>
      <hr>
      <form action="/auth/login" method="post">
        <div class="container">
          <label for="id"><b>Username</b></label>
          <input type="text" placeholder="Enter Username" name="id" required>

          <label for="password"><b>Password</b></label>
          <input type="password" placeholder="Enter Password" name="password" required>

          <label for="remember"><input type="checkbox" placeholder="Enter Password" name="remember" required>Remember Me</label>

          <button type="submit" class="submitBut">Login</button>
        </div>
      </form>
    </div>
    <div class="preloader">
      <div class="loader"></div>
    </div>
  </body>
</html>
